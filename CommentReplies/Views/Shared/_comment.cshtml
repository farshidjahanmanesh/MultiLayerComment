@model List<Comment>

@foreach (var item in Model)
{
    <div class="media-block">
        <a class="media-left" href="#"><img class="img-circle img-sm" alt="Profile Picture" src="https://bootdey.com/img/Content/avatar/avatar1.png"></a>
        <div class="media-body">
            <div class="mar-btm">
                <a href="#" class="btn-link text-semibold media-heading box-inline">@item.Name</a>
                <p class="text-muted text-sm"><i class="fa fa-mobile fa-lg"></i> @item.CreateAt</p>
            </div>
            <p>
                @item.Text
            </p>
            <div id="@item.Id" class="pad-ver">
                <div class="btn-group">
                    <a class="btn btn-sm btn-default btn-hover-success" href="#"><i class="fa fa-thumbs-up"></i></a>
                    <a class="btn btn-sm btn-default btn-hover-danger" href="#"><i class="fa fa-thumbs-down"></i></a>
                </div>
                <a class="btn btn-sm btn-default btn-hover-primary" onclick="reply(@item.Id,@item.ParentId)">Reply</a>
            </div>
            <hr>

            <partial name="_comment" model="item.Comments"/>
        </div>
    </div>

}
